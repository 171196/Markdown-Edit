<UserControl
  x:Class="MarkdownEdit.Controls.DisplayDocumentStructure"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:MarkdownEdit.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="300"
  d:DesignWidth="300"
  mc:Ignorable="d">

  <UserControl.DataContext>
    <local:DisplayDocumentStructureViewModel />
  </UserControl.DataContext>

  <ListBox ItemsSource="{Binding Structure}">
    <ListBox.ItemTemplate>
      <DataTemplate>
        <StackPanel Orientation="Horizontal">
          <TextBlock MinWidth="{Binding Level}" Text=" " />
          <TextBlock Text="{Binding Heading}" FontWeight="{Binding FontWeight}" />
        </StackPanel>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</UserControl>
