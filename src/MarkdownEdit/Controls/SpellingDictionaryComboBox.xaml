<UserControl
  x:Class="MarkdownEdit.Controls.SpellingDictionaryComboBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:app="clr-namespace:MarkdownEdit"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="300"
  d:DesignWidth="300"
  DataContext="{Binding RelativeSource={RelativeSource Self}}"
  mc:Ignorable="d">
  <Grid>
    <ComboBox x:Name="Languages" SelectedItem="{Binding Path=SpellCheckDictionary, Source={x:Static app:App.UserSettings}}" />
  </Grid>
</UserControl>
